{% extends 'base.html.twig'%}
{% block body %}
<div class="container-fluid">
    <form method="post" action="{{ path('user_profil_edit') }}">
        <legend>Profil</legend>
        <div class="form-group">
            <label>nom :</label>
            <input name="nom"  type="text"  size="18" value="{% if donnees.nom %}{{ donnees.nom }}{% else %}aucun nom renseigner{% endif %}" class="form-control">
            {% if erreurs.nom is defined %}
                <div style="color: red">{{ erreurs.nom }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            <label>prenom :</label>
            <input name="prenom"  type="text"  size="18" value="{% if donnees.prenom %}{{ donnees.prenom }}{% else %}aucun prenom renseigner{% endif %}" class="form-control">
            {% if erreurs.prenom is defined %}
                <div style="color: red">{{ erreurs.prenom }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            <label>email :</label>
            <input name="email"  type="text"  size="18" value="{{donnees.email|default('')}}" class="form-control">
            {% if erreurs.email is defined %}
                <div style="color: red">{{ erreurs.email }}</div>
            {% endif %}
        </div>
        <input type="hidden" name="token" value="{{ csrf_token('form_profil') }}">
        <button type="submit" class="btn btn-primary">{{ button|default('Valider') }}</button>

    </form>
</div>
{% endblock %}